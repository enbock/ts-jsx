{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "module": "ES6",
    "target": "ES2020",
    "strict": true,
    "listEmittedFiles": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*"
  ]
}
